# Target System
CONFIG_TARGET_ath79=y
CONFIG_TARGET_ath79_generic=y
CONFIG_TARGET_MULTI_PROFILE=y
CONFIG_TARGET_DEVICE_ath79_generic_DEVICE_tplink_tl-wr841n-v9=y

# Kernel
CONFIG_KERNEL_CRASHLOG=y

# Base system
CONFIG_PACKAGE_dnsmasq=n
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_iptables=y

# Без PPPoE
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_ppp-mod-pppoe=n

# LuCI (web interface)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-app-firewall=y

# Wi-Fi драйвера
CONFIG_PACKAGE_kmod-ath9k=y
CONFIG_PACKAGE_wpad-basic-wolfssl=n
CONFIG_PACKAGE_wpad-basic-mbedtls=y

# Network and uHTTPd (Web server)
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_odhcpd=n

# Dropbear SSH
CONFIG_PACKAGE_dropbear=y

# SSR Plus
CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_shadowsocks-libev-ss-local=y
CONFIG_PACKAGE_shadowsocks-libev-ss-redir=y
CONFIG_PACKAGE_shadowsocks-libev-ss-server=y
CONFIG_PACKAGE_shadowsocks-libev-ss-tunnel=y
CONFIG_PACKAGE_shadowsocks-libev-config=y
CONFIG_PACKAGE_microsocks=y
CONFIG_PACKAGE_pdnsd-alt=y

# Language
CONFIG_LUCI_LANG_en=y

# No IPv6
CONFIG_PACKAGE_ip6tables=n
CONFIG_PACKAGE_odhcp6c=n
CONFIG_IPV6=n

# Remove unnecessary
CONFIG_PACKAGE_ca-certificates=n
CONFIG_PACKAGE_coreutils-nohup=n
CONFIG_PACKAGE_coreutils-base64=n
CONFIG_PACKAGE_v2ray-core=n
CONFIG_PACKAGE_xray-core=n
